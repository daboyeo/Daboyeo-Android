<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="writing"
            type="com.example.daboyeo_android.writing.WritingActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/background"
        tools:context=".writing.WritingActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/writing_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:padding="15dp">

            <ImageView
                android:id="@+id/writing_profile_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_launcher_background"
                app:layout_constraintLeft_toLeftOf="@id/writing_constraintLayout"
                app:layout_constraintTop_toTopOf="@id/writing_constraintLayout" />

            <TextView
                android:id="@+id/writing_content_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="@string/writing_comment"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/writing_profile_imageView"
                app:layout_constraintTop_toTopOf="@id/writing_constraintLayout" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/writing_image_viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/writing_content_textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>